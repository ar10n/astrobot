generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id      Int      @id @unique
    name    String
    city    String
    cart    Cart?
    session Session?
}

model Session {
    id                Int  @id @default(autoincrement())
    currentCategoryId Int?
    currentServiceId  Int?
    user              User @relation(fields: [userId], references: [id])
    userId            Int  @unique
}

model Cart {
    id       Int             @id @default(autoincrement())
    user     User            @relation(fields: [userId], references: [id])
    userId   Int             @unique
    services ServiceInCart[]
}

model Category {
    id          Int       @id @default(autoincrement())
    name        String    @unique
    description String?
    service     Service[]
}

model Service {
    id          Int             @id @default(autoincrement())
    name        String          @unique
    description String
    price       Float?
    category    Category        @relation(fields: [categoryId], references: [id])
    categoryId  Int
    carts       ServiceInCart[]
}

model ServiceInCart {
    cart      Cart    @relation(fields: [cartId], references: [id])
    cartId    Int
    service   Service @relation(fields: [serviceId], references: [id])
    serviceId Int

    @@id([cartId, serviceId])
}
